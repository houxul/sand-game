.sandpaintings {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: rgb(246, 246, 246);
}

.sandpainting-item {
	margin: 10px 0px 10px 0px;
	padding: 10px 20px 10px 20px;
	background-color: rgb(255, 255, 255);
}

.sandpainting-item-vertical {
	width: 100%;
}

.sandpainting-item-horizontal {
	width: 100%;
}

.sandpainting-item-vertical-img {
    margin-left: auto; 
    margin-right:auto; 
	display:block;
	border-radius: 5px;
}

.sandpainting-item-horizontal-img {
	margin-left: auto; 
    margin-right:auto; 
	display:block;
	border-radius: 5px;
}

.sandpainting-item-top {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin: 0px 0px 10px 0px;
}

.sandpainting-item-top-left {
	display: flex;
	align-items: center;
	font-size: 14px;
	color: #888888;
}

.sandpainting-item-top-right {
	display: flex;
	justify-content: flex-end;
	font-size: 14px;
	color: #888888;
}

.sandpainting-item-bottom {
	display: flex;
	justify-content: space-between;
	margin: 10px 0px 0px 0px;
}

.sandpainting-item-bottom-left {
	display: flex;
	align-items: center;
	font-size: 14px;
	color: #888888;
}

.sandpainting-item-bottom-right {
	display: flex;
	justify-content: flex-end;
}

.button-image-action {
	width: 25px;
	height: 25px;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: transparent;
	border: 0
}

.image-action {
	width: 20px;
	height: 20px;
}

.avatar {
	width: 24px;
	height: 24px;
	/* margin: 10px; */
	border-radius: 50%;
}