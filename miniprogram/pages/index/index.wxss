/* miniprogram/pages/index/index.wxss */
page{
	width: 100%;
	height: 100%;
	overflow:hidden;
}

.page-view {
	width: 100%;
	height: 100%;
}

.offscreen-canvas {
	position:fixed;
	left:100%;
}

.canvas {
	width: 100%;
	height: 100%;
	position: absolute;
	z-index: 50;
}

.menu-button {
	position: absolute;
	z-index: 99;
	width: 35px;
	height: 35px;
	border-radius: 50%;
	/* background-color: rgb(70, 67, 67); */
}

.menu-view {
	width: 100%;
	height: 100%;
	z-index: 100;
	display: flex;
	position:fixed;
}

.menu-area {
	width: 250px;
	height: 100%;
	background-color: rgb(222, 222, 222);
	display: flex;
	flex-direction: column;
}

.menu-shadow {
	width: calc(100% - 250px);
	height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
}

.menu-userinfo {
	margin-top: 27%;
	display: flex;
	align-items: center;
	justify-content: center;
}   

.userinfo-avatar {
	overflow:hidden;
	display: block;
	width: 80px;
	height: 80px;
	border-radius: 50%;
	border: 2px solid #fff;
	box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.menu-actions {
	width: 100%;
	margin-top: 10px;
}

.menu-action-item {
	width: 100%;
	height: 48px;
	display: flex;
	align-items: center
}

.menu-action-item-icon {
	width: 20px;
	height: 20px;
	margin-left: 60px;
	margin-right: 10px;
}

.menu-action-item-key {
}

.menu-action-item-tip {
	width: 20px;
	height: 20px;
	margin-left: 5px;
}

.mycolors {
	position: absolute;
	z-index: 100;
	justify-content: center;
	align-items: center;
	flex-wrap: wrap;
	display: flex;
	border-radius: 8px;
	background-color: rgba(0, 0, 0, 0.3);
}

.add-color {
	width: 50px;
	height: 50px;
	border-radius: 50%;
	margin: 8px;
}

.mycolor-item-view {
	width: 50px;
	height: 50px;
	margin: 8px;
}