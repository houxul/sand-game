/* miniprogram/pages/photosandpainting/photosandpainting.wxss */

page{
	height: 80%;
	overflow:hidden;
}

.img-view {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	flex-direction: column;
}

.tip {
	margin-top: 16px;
	margin-left: 10px;
	font-size: 14px;
	color: #888888;
}

.progress-view {
	position: absolute;
	z-index: 100;
	background-color: rgba(255, 255, 255, 0.6);
	display: flex;
	align-items: center;
	justify-content: center;
}

.offscreen-canvas {
	position:fixed;
	left:100%;
}