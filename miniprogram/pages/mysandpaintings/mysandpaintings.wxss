.sandpaintings {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: rgb(240, 240, 240);
}

.sandpainting-item {
	margin: 100px 0px 100px 0px;
	padding-top: 10px;
}

.sandpainting-item-vertical {
	width: 100%;
}

.sandpainting-item-horizontal {
	width: 100%;
}

.sandpainting-item-vertical-img {
    margin-left: auto; 
    margin-right:auto; 
	display:block;
}

.sandpainting-item-horizontal-img {
	margin-left: auto; 
    margin-right:auto; 
	display:block;
}

.sandpainting-item-bottom {
	display: flex;
	justify-content: space-between;
}

.sandpainting-item-bottom-left {
	font-size: 16px;
	color: #888888;
}

.sandpainting-item-bottom-right {
	display: flex;
	justify-content: flex-end;
	align-items: center;
}

.image-action {
	width: 20px;
	height: 20px;
}

